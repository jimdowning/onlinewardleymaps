{
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true,
		"jquery": true, //This should be removed once jquery has been removed as a dependency
		"amd": true
	},
	"plugins": ["react", "prettier"],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"prettier",
		"prettier/react"
	],
	"rules": {
		"prettier/prettier": "error",
		"linebreak-style": ["error", "unix"],
		"react/prop-types": 0
	}
}
